  <body class="body-showbook">

    <nav class="navbar navbar-light bg-light justify-content-between">
      <%=Name%>
      <form class="form-inline" action="/showbook" method="post">
        <input class="form-control mr-sm-2" type="search" placeholder="Search Book name" aria-label="Search" name="search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Check Availability</button>
      </form>
      <form action="/logout" method="get">
        <button type="submit" class="btn btn-primary">Logout</button>
      </form>
    </nav>

    <div class="show-content">
      <h3 class="fcolor">Enter the Book to be issued.</h3><br>
      <form class="form-inline form-center" action="/showbook" method="post">
        <input class="form-control mr-sm-2" type="text" name="issuename" placeholder="Book name">
        <button type="submit" class="btn btn-primary">Issue</button>
      </form>

      <div class="issue-heading">
      <h3 class="fcolor" >Your issued books are displayed here.</h3>
      </div>


      <table class="center">
        <tr class="fcolor">
          <th>Book Name </th>
          <th> Book-Id </th>
          <th> Issue Date </th>
          <th> Return Date </th>
          <th> click to Return</th>
        </tr>
      <%newListItems.forEach(function(item){%>
        <form action="/delete" method="post">
        <div>
          <!--<input type="submit" name="checkbox" onChange="this.form.submit()" value=>-->
          <tr>
            <td><%=item.nameb %></td>
            <td><%=item.idb %></td>
            <td><%=item.issuedate %></td>
            <td><%=item.returndate %></td>
            <td><button type="submit" class="btn btn-primary btn-sm" value=<%=item.idb%> name="return" >return</button></td>
          </tr>
        </div>
        </form>
      <%})%>
      </table>




    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="D:\5th sem\DBS LIB PROJ\controls.js"></script>
  </body>
</html>
